    video_ibfk_05                   | id_articolo                   | articoli.id                   | ON DELETE SET NULL ON UPDATE SET NULL
    video_ibfk_06                   | id_categoria_prodotti         | categorie_prodotti.id         | ON DELETE SET NULL ON UPDATE SET NULL
    video_ibfk_07                   | id_risorsa                    | risorse.id                    | ON DELETE SET NULL ON UPDATE SET NULL
    video_ibfk_08                   | id_categoria_risorse          | categorie_risorse.id          | ON DELETE SET NULL ON UPDATE SET NULL
    video_ibfk_09                   | id_notizia                    | notizie.id                    | ON DELETE SET NULL ON UPDATE SET NULL
    video_ibfk_10                   | id_categoria_notizie          | categorie_notizie.id          | ON DELETE SET NULL ON UPDATE SET NULL
    video_ibfk_11_nofollow          | id_lingua                     | lingue.id                     | ON DELETE NO ACTION ON UPDATE NO ACTION
    video_ibfk_12_nofollow          | id_ruolo                      | ruoli_video.id                | ON DELETE NO ACTION ON UPDATE NO ACTION
    video_ibfk_13_nofollow          | id_embed                      | embed.id                      | ON DELETE NO ACTION ON UPDATE NO ACTION
    video_ibfk_14                   | id_progetto                   | progetti.id                   | ON DELETE SET NULL ON UPDATE SET NULL
